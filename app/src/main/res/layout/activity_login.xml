<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEEE"
    android:orientation="vertical"
    tools:ignore="MissingClass">

    <ImageView
        android:id="@+id/img_trello"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginBottom="10dp"
        android:scaleType="fitXY"
        android:src="@drawable/img_d1vtask" />

    <EditText
        android:textSize="18dp"
        android:id="@+id/edt_email_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/custom_edt_border"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="Email"
        android:inputType="textPersonName"
        android:minHeight="40dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp" />

    <EditText
        android:textSize="18dp"
        android:id="@+id/edt_pass_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/custom_edt_border"
        android:ems="10"
        android:fontFamily="sans-serif-medium"
        android:hint="Password"
        android:inputType="textPassword"
        android:minHeight="40dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp" />

    <CheckBox
        android:id="@+id/login_checkbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:buttonTint="@color/black"
        android:text="Show Password"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/custom_btn"
        android:text="Login"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:backgroundTint="#006400" />


    <TextView
        android:id="@+id/textViewForgot"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="16dp"
        android:fontFamily="sans-serif-medium"
        android:minHeight="20dp"
        android:padding="10dp"
        android:text="Forgot Password"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="#43A047"
        android:textSize="18sp"
        android:typeface="normal" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:maxHeight="40dp"
        android:minHeight="20dp"
        android:text="Or"
        android:textColor="@color/black"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnNewAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/custom_btn"
        android:fontFamily="sans-serif-medium"
        android:text="Create new account"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="#43A047"
        android:textSize="18sp"
        android:typeface="normal"
        app:backgroundTint="#280394F4" />


</LinearLayout>