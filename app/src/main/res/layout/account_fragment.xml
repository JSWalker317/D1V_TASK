<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.AccountFragment">

    <LinearLayout
        android:id="@+id/linear1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#006400"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        android:padding="20dp">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:elevation="10dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="50dp"
            android:src="@drawable/img_login"
            app:cardBackgroundColor="@color/white">

            <ImageView
                android:id="@+id/img_profile_fragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                 />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:orientation="vertical">
            <TextView
                android:drawablePadding="10dp"
                android:drawableTint="@color/white"
                android:drawableLeft="@drawable/ic_account"
                android:id="@+id/tv_name_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nhom1"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp" />
            <TextView
                android:drawablePadding="10dp"
                android:drawableTint="@color/white"
                android:drawableLeft="@drawable/ic_contact"
                android:id="@+id/tv_prof_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Fetel"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:drawablePadding="10dp"
                android:drawableTint="@color/white"
                android:drawableLeft="@drawable/ic_email"
                android:id="@+id/tv_email_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="Nhom1_ltdd_dtvt@gmail.com"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:drawablePadding="10dp"
                android:drawableTint="@color/white"
                android:drawableLeft="@drawable/ic_phone"
                android:id="@+id/tv_phone_fragment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:text="0472723822"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/img_trello"
        android:layout_below="@+id/linear1"
        android:background="#EEEEEE"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Account"
            android:textColor="#424242"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:clickable="true"
            android:drawableLeft="@drawable/ic_update"
            android:drawablePadding="10dp"
            android:minHeight="48dp"
            android:padding="10dp"
            android:text="Update profile"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_contact"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:text="Contact"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/tv_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:drawableLeft="@drawable/ic_logout"
            android:drawablePadding="10dp"
            android:padding="10dp"
            android:text="Logout"
            android:textColor="@color/black"
            android:textSize="20sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/img_trello"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:baselineAlignBottom="true"
        android:padding="20dp"
        android:src="@drawable/img_d1vtask" />

</RelativeLayout>