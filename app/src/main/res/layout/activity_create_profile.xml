<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#EEEEEE"
    android:orientation="vertical"
    tools:context=".CreateProfile_Activity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="Create Profile"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#006400"
        android:textSize="24sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:cardCornerRadius="75dp"
        app:cardPreventCornerOverlap="false">

        <ImageView
            android:id="@+id/img_profile"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="true"
            android:scaleType="fitCenter" />
    </androidx.cardview.widget.CardView>

    <EditText
        android:id="@+id/edt_name_pro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:paddingLeft="10dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_account"
        android:hint="Name"
        android:textColor="@color/black" />
    <EditText
        android:id="@+id/edt_profession_pro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:paddingLeft="10dp"
        android:drawableStart="@drawable/ic_job"
        android:drawablePadding="5dp"
        android:hint="Profession"
        android:textColor="@color/black" />
    <EditText
        android:id="@+id/edt_email_pro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:paddingLeft="10dp"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="5dp"
        android:hint="Email"
        android:textColor="@color/black" />
    <EditText
        android:id="@+id/edt_phone_pro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/ic_phone"
        android:layout_margin="4dp"
        android:hint="Phone"
        android:textColor="@color/black" />

    <Button
        android:id="@+id/btn_saveProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="@drawable/custom_btn"
        android:text="Save profile"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:backgroundTint="#006400" />

</LinearLayout>